<resources>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/nile_blue</item>
        <item name="android:fontFamily">@font/goodpro</item>
    </style>

    <style name="TextAppearance.H1">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.H1.Expandable">
        <item name="android:textSize">31sp</item>
        <item name="android:fontFamily">@font/goodpro_extd</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="TextAppearance.H1.Inverted">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.H2">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.H2.Inverted">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.H3">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.H3.Inverted">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.H4">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.H4.Inverted">
        <item name="android:textColor">@color/white</item>
    </style>



</resources>
