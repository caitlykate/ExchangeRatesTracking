<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.sort.SortFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Сортировка"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:focusable="true"
        android:clickable="true"
        android:paddingLeft="30dp"
        android:text="По алфавиту"
        />

    <TextView
        android:id="@+id/textViewSortAlphabetAsc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="50dp"
        android:text="- по возрастанию" />

    <TextView
        android:id="@+id/textViewSortAlphabetDesc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="50dp"
        android:text="- по убыванию" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="30dp"
        android:text="По значению" />

    <TextView
        android:id="@+id/textViewSortValueAsc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="50dp"
        android:text="- по возрастанию" />

    <TextView
        android:id="@+id/textViewSortValueDesc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="50dp"
        android:text="- по убыванию" />

</LinearLayout>